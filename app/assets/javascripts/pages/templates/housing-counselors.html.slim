header.lead-header.bg-attention-tint
  .row
    .large-12.columns
      h1.lead-title.t-beta Housing Counselor Resources
      .medium-8.columns.no-padding
        p.t-gamma.t-light.show-for-medium-up Talk with a local housing counselor specific to your needs.

section.row
  .medium-8.columns
    header.section-header.margin-top--2x
      h2.t-gamma.no-margin Featured Resources
    ul.resources-list.block-list ng-repeat="counselor in housing_counselors"
      li.block-item
        h3.t-delta.t-sans.margin-bottom--half
          a.a-oil
            | {{ counselor.name }}
        p.t-tiny.c-steel ng-if="counselor.languages"
          | Language Services:
          span ng-repeat="language in counselor.languages"
            span.label.radius.secondary
              | {{ language }}
        .a-icon-left.d-block
          span.ui-icon.ui-medium
            svg
              use xlink:href="#i-map" /
          p.offset-icon.margin-bottom--half
            | {{ counselor.address }},
            br
            | {{ counselor.citystate }}
        p
          a.button-on-small href="tel:+1{{counselor.phone}}"
            span.ui-icon.ui-medium
              svg
                use xlink:href="#i-phone" /
            | Call {{ counselor.phone }}
          a.button-on-small target="_blank" href="{{counselor.website}}"
            span.ui-icon.ui-medium
              svg
                use xlink:href="#i-link"
            | Visit {{ counselor.name}}
