tr ng-repeat="unitSummary in ::summary" ng-if="::unitSummary.minPriceWithoutParking || unitSummary.minPriceWithParking"
  td scope="row"
    | {{::unitSummary.unitType}}
  td ng-if="::$ctrl.hasUnitsWithoutParking($ctrl.listing)"
    span
      span ng-show="::$ctrl.hasRangeOfPricesWithoutParking(unitSummary)"
        | {{::unitSummary.minPriceWithoutParking | currency:"$":0}} or more
      span ng-show="::!$ctrl.hasRangeOfPricesWithoutParking(unitSummary)"
        | {{::unitSummary.minPriceWithoutParking | currency:"$":0}}
  td ng-if="::$ctrl.hasUnitsWithParking($ctrl.listing)"
    span
      span ng-show="::$ctrl.hasRangeOfPricesWithParking(unitSummary)"
        | {{::unitSummary.minPriceWithParking | currency:"$":0}} or more
      span ng-show="::!$ctrl.hasRangeOfPricesWithParking(unitSummary)"
        | {{::unitSummary.minPriceWithParking | currency:"$":0}}