.checkbox-block ng-class="{ error: inputInvalid('liveWorkInSf') }"
  input id="preferences-liveWorkInSf" name="liveWorkInSf" data-event="{{pref_data_event}}" ng-model="application.preferences.liveWorkInSf" type="checkbox" aria-labelledby="{{labelledby}}" ng-click="on_livework_preference_change()" aria-describedby="description-{{preference}}" ng-required="{{required}}" ng-class="{ error: inputInvalid('liveWorkInSf') }"
  label.checkbox-block_label for="preferences-liveWorkInSf"
    strong.form-label.caps
      | {{title}}
    p.checkbox-block_note translate="{{shortDescription}}" ng-if="shortDescription"


  .checkbox-block_note-inner
    a.toggler.toggle-more.hide-for-print.open-bottom title="read {{ show_preference_description ? 'less' : 'more' }}" ng-class="{ 'margin-top-none' : shortDescription, open: show_preference_description }" ng-click="show_preference_description = !show_preference_description"
      ' read {{ show_preference_description ? 'less' : 'more' }}
      span.ui-icon.ui-tiny.i-primary
        svg
          use xlink:href="#i-arrow-down" xmlns:xlink="http://www.w3.org/1999/xlink"
    p.show-for-print.checkbox-block_more id="description-{{preference}}" ng-show="show_preference_description" translate="{{description}}"

  / select for liveWorkInSf preference type
  .form-group.input-inset.margin-bottom-none.padding-bottom-none ng-class="{ error: inputInvalid('liveWorkInSf_preference') }" ng-if="application.preferences.liveWorkInSf"

      label.form-label.caps for="liveWorkPrefOption"
        | {{'LABEL.PREFERENCE_OPTION_TO_CLAIM' | translate}}
      select id="liveWorkPrefOption" ng-model="application.preferences.liveWorkInSf_preference" data-width="auto" name="liveWorkInSf_preference" ng-required="application.preferences.liveWorkInSf" ng-change="select_liveWork_preference({reset: true})"
        option value="" translate="LABEL.SELECT_ONE"
        option value="liveInSf" translate="E2_LIVE_WORK_PREFERENCE.LIVE_WORK_SF_PREFERENCE.LIVE_SF_PREFERENCE"
        option value="workInSf" translate="E2_LIVE_WORK_PREFERENCE.LIVE_WORK_SF_PREFERENCE.WORK_SF_PREFERENCE"
