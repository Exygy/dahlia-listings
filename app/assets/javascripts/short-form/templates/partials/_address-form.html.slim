.form-address.row
  .form-group-street.form-item.large-12.columns ng-class="{ error: isRequired() && inputInvalid('address1', addressType) }"
    label for="{{model}}_{{addressType}}_address1"
    input(id="{{model}}_{{addressType}}_address1" ng-model="this[model][addressType].address1"
      ng-change="checkIfMailingAddressNeeded()" name="{{addressType}}_address1" placeholder=("Street Address") type="text"
      ng-required="isRequired()" ng-class="{ error: isRequired() && inputInvalid('address1', addressType) }")
    small.error ng-show="isRequired() && inputInvalid('address1', addressType)"
      | Please enter an address

