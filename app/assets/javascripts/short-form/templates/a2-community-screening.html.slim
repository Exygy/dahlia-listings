.app-card.form-card
  community-screening-header

  / this is for not answering the question
  alert-box(short-form="true")
  / this is the custom community screening "No" error
  / TODO: Will be done in: Multifamily: You/Household Error for Senior Buildings #136991865
  / alert-box(custom-message="'Watch out'" custom-sub-message="'You need to check your privilege at the door.'" hide-alert="hideAlert" ng-if="communityScreeningInvalid" invert="true")

  .app-inner.inset
    .form-group ng-class="{ error: inputInvalid('communityScreening') || communityScreeningInvalid }"
      p.form-note.margin-bottom translate="LABEL.PLEASE_SELECT_ONE"
      .radio-group.padding-top--half role="radiogroup" aria-label="mustchange"
        radio-block-item value='Yes' user='application' name='communityScreening' ng-required='true' on-change='checkCommunityScreening'
          | {{labels.communityScreeningYes}}
        radio-block-item value='No' user='application' name='communityScreening' ng-required='true'
          | {{'T.NO' | translate}}
  .button-pager
    .button-pager_row.primary.text-center
      input#submit.button.primary.radius type="submit" value="{{'T.NEXT' | translate}}"
