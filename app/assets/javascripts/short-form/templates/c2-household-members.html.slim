.app-card.form-card
  short-form-header
    h2.app-card_question
      | {{'C2_HOUSEHOLD_MEMBERS.TITLE' | translate}}

  .app-inner.short.focus-container
    .form-group
      .info-item.tall.border-bottom id="household-primary"
        p.info-item_name
          | {{ applicant.firstName }} {{ applicant.lastName }}
        p.info-item_value
          | {{'LABEL.PRIMARY_USER' | translate}}
        a.edit-link.info-item_link ui-sref="dahlia.short-form-application.name"
          | {{'T.EDIT' | translate}}

      .info-item.tall.border-bottom ng-repeat="member in householdMembers" id="household-member-{{$index}}"
        p.info-item_name
          | {{ member.firstName }} {{ member.lastName }}
        p.info-item_value
          | {{'LABEL.HOUSEHOLD_MEMBER' | translate}}
        a.edit-link.info-item_link ui-sref="dahlia.short-form-application.household-member-form-edit({member_id: member.id})"
          | {{'T.EDIT' | translate}}

      .text-center.padding--2x
        button#add-household-member.has-icon.no-margin ui-sref="dahlia.short-form-application.household-member-form"
          span.ui-icon.ui-medium
            svg
              use xlink:href="#i-plus"
          | {{'LABEL.ADD_HOUSEHOLD_MEMBER' | translate}}

  short-form-save-and-submit(submit-value="{{'LABEL.DONE_ADDING_PEOPLE' | translate}}")
