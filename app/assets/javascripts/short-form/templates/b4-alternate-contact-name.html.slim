.app-card.form-card
  short-form-header
    h2.app-card_question
      | {{'B4_ALTERNATE_CONTACT_NAME.TITLE' | translate}}

  .app-inner.inset
    .form-group ng-class="{ error: (inputInvalid('firstName') || inputInvalid('lastName')) }"
      h3.form-label.caps
        | {{'LABEL.ALTERNATE_CONTACT_NAME' | translate}}
      label.sr-only for="alternate_firstName" translate="LABEL.FIRST_NAME"
      input#alternate_first_name(ng-model="alternateContact.firstName" maxlength="{{::INPUT_MAX_LENGTH.firstName}}"  name="firstName" ng-required="true" placeholder="{{'LABEL.FIRST_NAME' | translate}}" type="text" ng-class="{ error: inputInvalid('firstName') }" aria-describedby="alternate_first_name_error" ng-pattern="latinRegex" translated-error="ERROR.FIRST_NAME" input-error)

      label.sr-only for="alternate_lastName" translate="LABEL.LAST_NAME"
      input#alternate_last_name(ng-model="alternateContact.lastName" maxlength="{{::INPUT_MAX_LENGTH.lastName}}" name="lastName" ng-required="true" placeholder="{{'LABEL.LAST_NAME' | translate}}" type="text" ng-class="{ error: inputInvalid('lastName') }" aria-describedby="alternate_last_name_error" ng-pattern="latinRegex" translated-error="ERROR.LAST_NAME" input-error)

    .form-group.margin-bottom--2x ng-if="alternateContact.alternateContactType == 'Social Worker or Housing Counselor'" ng-class="{ error: inputInvalid('agency') }"
      h3.form-label.caps
        | {{'LABEL.ALTERNATE_CONTACT_AGENCY' | translate}}
      label.sr-only for="alternate_agency" translate="LABEL.ALTERNATE_CONTACT_AGENCY"
      input#alternate_agency(ng-model="alternateContact.agency" maxlength="{{::INPUT_MAX_LENGTH.alternateContactAgency}}" ng-class="{ error: inputInvalid('agency')}" name="agency" placeholder="{{'LABEL.AGENCY' | translate}}" type="text" ng-pattern="latinRegex" input-error)

  short-form-save-and-submit
