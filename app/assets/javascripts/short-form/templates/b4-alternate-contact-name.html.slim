.app-card.form-card
  short-form-header
    h2.app-card_question
      | {{'B4_ALTERNATE_CONTACT_NAME.TITLE' | translate}}

  .app-inner.inset
    .form-group ng-class="{ error: (inputInvalid('firstName') || inputInvalid('lastName')) }"
      h3.form-label.caps
        | {{'LABEL.ALTERNATE_CONTACT_NAME' | translate}}
      label.sr-only for="alternate_firstName" translate="LABEL.FIRST_NAME"
      input#alternate_first_name ng-model="alternateContact.firstName" maxlength="{{::INPUT_MAX_LENGTH.firstName}}"  name="firstName" ng-required="true" placeholder="First Name" type="text" ng-class="{ error: inputInvalid('firstName') }" aria-describedby="alternate_first_name_error"
      small.error#alternate_first_name_error ng-show="inputInvalid('firstName')"
        | {{'ERROR.FIRST_NAME' | translate}}
      label.sr-only for="alternate_lastName" translate="LABEL.LAST_NAME"
      input#alternate_last_name ng-model="alternateContact.lastName" maxlength="{{::INPUT_MAX_LENGTH.lastName}}" name="lastName" ng-required="true" placeholder="Last Name" type="text" ng-class="{ error: inputInvalid('lastName') }" aria-describedby="alternate_last_name_error"
      small.error#alternate_last_name_error ng-show="inputInvalid('lastName')"
        | {{'ERROR.LAST_NAME' | translate}}
    .form-group.margin-bottom--2x ng-if="alternateContact.alternateContactType == 'Social Worker or Housing Counselor'"
      h3.form-label.caps
        | {{'LABEL.ALTERNATE_CONTACT_AGENCY' | translate}}
      label.sr-only for="alternate_agency" translate="LABEL.ALTERNATE_CONTACT_AGENCY"
      input#alternate_agency ng-model="alternateContact.agency" maxlength="{{::INPUT_MAX_LENGTH.alternateContactAgency}}" name="agency" placeholder="{{'LABEL.AGENCY' | translate}}" type="text"

  short-form-save-and-submit
